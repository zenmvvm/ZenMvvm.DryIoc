<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <!-- General -->
        <AssemblyName>ZenMvvm.DryIoc</AssemblyName>
        <Description>Lightweight ViewModel-First MVVM framework for Xamarin.Forms. With ZenMvvm you can use a ViewModel-First pattern while keeping the power and familiarity of Xamarin Forms. The result? More readable and maintainable code, and a stronger separation of concerns.</Description>
        <Copyright>Copyright 2020 ZenMvvm</Copyright>
        <Authors>Guy Antoine and contributors</Authors>
        <NeutralLanguage>en-GB</NeutralLanguage>

        <!-- Build settings -->
        <TargetFrameworks>netstandard2.0;net5.0</TargetFrameworks>

        <!-- NuGet settings -->
        <PackageId>ZenMvvm.DryIoc</PackageId>
        <PackageTags>mvvm;xamarin-forms;ioc;dependency-injection;inversion-of-control;viewmodel-first-navigation;viewmodel-first;zenmvvm;dryioc</PackageTags> <!-- separate with ; -->
        <PackageReleaseNotes>https://github.com/zenmvvm/ZenMvvm.DryIoc/releases</PackageReleaseNotes>
        <PackageProjectUrl>https://github.com/zenmvvm/ZenMvvm.DryIoc</PackageProjectUrl>
        <!-- Choose either PackageLicenseExpression or PackageLicenseFile (but not both) -->
        <!-- <PackageLicenseExpression>MIT</PackageLicenseExpression> -->
        <PackageLicenseFile>LICENSE.md</PackageLicenseFile>
        <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
        <RepositoryType>git</RepositoryType>
        <RepositoryUrl>https://github.com/zenmvvm/ZenMvvm.DryIoc</RepositoryUrl>      
        <PackageIcon>icon@64x64.png</PackageIcon> <!--See itemgroup which points to file-->

        <!-- SourceLink settings -->
        <!-- Allows debugger to step into code of nuget package -->
        <PublishRepositoryUrl>true</PublishRepositoryUrl>
        <EmbedUntrackedSources>true</EmbedUntrackedSources>     
        <IncludeSymbols>true</IncludeSymbols>
    </PropertyGroup>
    <ItemGroup>
        <None Include="../../art/icon@64x64.png" Pack="true" PackagePath="$(PackageIconUrl)" />
        <None Include="../../LICENSE.md" Pack="true" PackagePath="" />
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="ZenMvvm" Version="1.0.1-pre" />
      <PackageReference Include="DryIoc.dll" Version="4.6.0" />
    </ItemGroup>
</Project>
